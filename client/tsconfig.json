{
	"compilerOptions": {
			"sourceMap": true,
			"strict": true,
			"module": "esnext",
			"moduleResolution": "node",
			"target": "esnext",
			"noImplicitAny": false,
			"experimentalDecorators": true,
			"strictPropertyInitialization": false,
			"strictNullChecks": false,
			"allowSyntheticDefaultImports": true
	},
	"compileOnSave": false,
	"atom": {
			"rewriteTsconfig": false
	}
}
